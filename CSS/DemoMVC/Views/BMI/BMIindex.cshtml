@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<h2>Tính chỉ số BMI</h2>

<form method="post">
    <label for="weight">Cân nặng (kg):</label>
    <input type="number" step="0.1" name="weight" required /><br />

    <label for="height">Chiều cao (m):</label>
    <input type="number" step="0.01" name="height" required /><br />

    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <h3>Chỉ số BMI của bạn: @ViewBag.BMI</h3>
    <p>@ViewBag.Message</p>
}
